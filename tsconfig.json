{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
  },
  "include": ["app.ts", "routes", "utils", "kafka", "prisma"],
  "exclude": ["node_modules"]
}
